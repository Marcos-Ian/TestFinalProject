<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ReservationController"
            prefHeight="700.0" prefWidth="900.0">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
            <Button fx:id="backButton" text="â† Back"/>
            <Label fx:id="titleLabel" text="Reservation Details">
                <font><Font name="System Bold" size="20"/></font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="reservationIdLabel" text="ID: #0000">
                <font><Font name="System Bold" size="14"/></font>
            </Label>
            <Label fx:id="statusBadge" text="BOOKED"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Guest Information -->
                <VBox spacing="10" styleClass="section-box">
                    <Label text="Guest Information" styleClass="header-label"/>
                    <GridPane hgap="15" vgap="8">
                        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="guestNameLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="guestPhoneLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="guestEmailLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Loyalty:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <Label fx:id="loyaltyStatusLabel" text="No"/>
                            <Button fx:id="enrollLoyaltyButton" text="Enroll" visible="false" managed="false"/>
                        </HBox>

                        <VBox fx:id="loyaltyNumberSection"
                              spacing="5"
                              visible="false"
                              managed="false">
                            <Label text="Loyalty Number:" styleClass="section-label"/>
                            <Label fx:id="loyaltyNumberLabel"/>
                        </VBox>

                        <VBox fx:id="loyaltyPointsSection"
                              spacing="5"
                              visible="false"
                              managed="false">
                            <Label text="Loyalty Points:" styleClass="section-label"/>
                            <Label fx:id="loyaltyPointsLabel"/>
                        </VBox>

                    </GridPane>
                </VBox>

                <!-- Reservation Details -->
                <VBox spacing="10" styleClass="section-box">
                    <Label text="Reservation Details" styleClass="header-label"/>
                    <GridPane hgap="15" vgap="8">
                        <Label text="Check-In:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="checkInLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Check-Out:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="checkOutLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Nights:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="nightsLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Guests:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label fx:id="guestsLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Booked:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <Label fx:id="bookingDateLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="By:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <Label fx:id="bookedByLabel" text="Kiosk" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    </GridPane>
                </VBox>

                <!-- Rooms -->
                <VBox spacing="10" styleClass="section-box">
                    <Label text="Room Details" styleClass="header-label"/>
                    <TableView fx:id="roomsTable" prefHeight="150">
                        <columns>
                            <TableColumn fx:id="roomTypeCol" text="Room Type" prefWidth="150"/>
                            <TableColumn fx:id="roomQuantityCol" text="Quantity" prefWidth="80"/>
                            <TableColumn fx:id="roomCapacityCol" text="Capacity" prefWidth="80"/>
                            <TableColumn fx:id="roomPriceCol" text="Price/Night" prefWidth="100"/>
                            <TableColumn fx:id="roomTotalCol" text="Subtotal" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Add-ons -->
                <VBox spacing="10" styleClass="section-box">
                    <Label text="Add-on Services" styleClass="header-label"/>
                    <TableView fx:id="addonsTable" prefHeight="120">
                        <columns>
                            <TableColumn fx:id="addonNameCol" text="Service" prefWidth="200"/>
                            <TableColumn fx:id="addonPricingCol" text="Pricing" prefWidth="120"/>
                            <TableColumn fx:id="addonPriceCol" text="Price" prefWidth="100"/>
                            <TableColumn fx:id="addonTotalCol" text="Total" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Financial Summary -->
                <VBox spacing="10" styleClass="section-box">
                    <Label text="Financial Summary" styleClass="header-label"/>
                    <GridPane hgap="20" vgap="8">
                        <Label text="Room Subtotal:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="roomSubtotalLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Add-ons Total:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="addonsTotalLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Subtotal:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="subtotalLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label fx:id="discountRow" text="Discount:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                               visible="false" managed="false"/>
                        <Label fx:id="discountLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="3"
                               visible="false" managed="false"/>

                        <Label text="Tax (13%):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <Label fx:id="taxLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label fx:id="loyaltyRedemptionRow" text="Loyalty:" GridPane.columnIndex="0" GridPane.rowIndex="5"
                               visible="false" managed="false"/>
                        <Label fx:id="loyaltyRedemptionLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="5"
                               visible="false" managed="false"/>

                        <Separator GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>

                        <Label text="TOTAL:" GridPane.columnIndex="0" GridPane.rowIndex="7">
                            <font><Font name="System Bold" size="16"/></font>
                        </Label>
                        <Label fx:id="grandTotalLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="7">
                            <font><Font name="System Bold" size="16"/></font>
                        </Label>

                        <Label text="Paid:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                        <Label fx:id="paidLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                        <Label text="Balance:" GridPane.columnIndex="0" GridPane.rowIndex="9">
                            <font><Font name="System Bold" size="14"/></font>
                        </Label>
                        <Label fx:id="balanceLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="9">
                            <font><Font name="System Bold" size="14"/></font>
                        </Label>
                    </GridPane>
                </VBox>

                <!-- Payment History -->
                <VBox spacing="10" styleClass="section-box">
                    <Label text="Payment History" styleClass="header-label"/>
                    <TableView fx:id="paymentsTable" prefHeight="120">
                        <columns>
                            <TableColumn fx:id="paymentDateCol" text="Date" prefWidth="120"/>
                            <TableColumn fx:id="paymentTypeCol" text="Type" prefWidth="100"/>
                            <TableColumn fx:id="paymentAmountCol" text="Amount" prefWidth="100"/>
                            <TableColumn fx:id="paymentByCol" text="By" prefWidth="120"/>
                            <TableColumn fx:id="paymentNotesCol" text="Notes" prefWidth="200"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="modifyButton" text="Modify" styleClass="primary-button"/>
                    <Button fx:id="applyDiscountButton" text="Apply Discount" styleClass="primary-button"/>
                    <Button fx:id="processPaymentButton" text="Process Payment" styleClass="primary-button"/>
                    <Button fx:id="checkoutButton" text="Checkout" styleClass="primary-button"/>
                    <Button fx:id="cancelButton" text="Cancel Reservation" styleClass="danger-button"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>