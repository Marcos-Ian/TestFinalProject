<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="12"
      fx:controller="controller.AdminLoginController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    <Label text="Administrator Login" styleClass="header-label"/>
    <GridPane hgap="8" vgap="8">
        <Label text="Username" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Password" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>
    <Label fx:id="errorLabel" textFill="red"/>
    <Button fx:id="loginButton" text="Login" onAction="#attemptLogin" styleClass="primary-button"/>
</VBox>
