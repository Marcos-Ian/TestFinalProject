<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AdminDashboardController" prefWidth="960" prefHeight="640">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Label fx:id="welcomeLabel" styleClass="header-label"/>
            <Label fx:id="billingLabel"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#logout"/>
        </HBox>
    </top>
    <left>
        <VBox spacing="8">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Button fx:id="searchButton" text="Search" onAction="#loadSearchView" styleClass="primary-button"/>
            <Button fx:id="createButton" text="Create/Modify" onAction="#loadEditView"/>
        </VBox>
    </left>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="guestsTab" text="Guests">
                    <content>
                        <fx:include source="admin_guest_search.fxml"/>
                    </content>
                </Tab>
                <Tab fx:id="reservationsTab" text="Reservations">
                    <content>
                        <fx:include source="admin_reservation_search.fxml"/>
                    </content>
                </Tab>
                <Tab fx:id="feedbackTab" text="Feedback">
                    <content>
                        <VBox spacing="12">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <Label text="Guest Feedback" styleClass="header-label"/>
                            <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="fbDateCol" text="Date" prefWidth="120"/>
                                    <TableColumn fx:id="fbEmailCol" text="Guest Email" prefWidth="200"/>
                                    <TableColumn fx:id="fbReservationCol" text="Reservation ID" prefWidth="140"/>
                                    <TableColumn fx:id="fbRatingCol" text="Rating" prefWidth="90"/>
                                    <TableColumn fx:id="fbCommentsCol" text="Comments" prefWidth="320"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
