<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ProcessPaymentController"
      spacing="12">
    <padding>
        <Insets topRightBottomLeft="15" />
    </padding>
    <children>
        <Label text="Process Payment" style="-fx-font-size: 18; -fx-font-weight: bold;" />
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints halignment="LEFT" minWidth="180"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="28"/>
            </rowConstraints>

            <Label text="Current Balance:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="balanceLabel" text="$0.00" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Total Paid:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Label fx:id="totalPaidLabel" text="$0.00" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Payment Method:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="paymentMethodCombo" prefWidth="180" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="amountField" promptText="0.00" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Payment Type:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <ComboBox fx:id="paymentTypeCombo" prefWidth="180" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Remaining After Payment:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <Label fx:id="previewRemainingLabel" text="-" GridPane.rowIndex="5" GridPane.columnIndex="1" />
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirm" />
            <Button text="Cancel" onAction="#handleCancel" />
        </HBox>
    </children>
</VBox>
