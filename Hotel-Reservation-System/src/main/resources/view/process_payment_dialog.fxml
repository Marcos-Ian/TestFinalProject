<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ProcessPaymentDialogController">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>
    <children>
        <Label text="Process Payment" style="-fx-font-size: 18; -fx-font-weight: bold;" />
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="160"/>
                <ColumnConstraints halignment="LEFT" minWidth="220"/>
            </columnConstraints>

            <Label text="Current Balance:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="balanceLabel" text="$0.00" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Total Paid:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Label fx:id="totalPaidLabel" text="$0.00" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Loyalty Points Available:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <Label fx:id="loyaltyBalanceLabel" text="0" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Points to Redeem:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="loyaltyPointsField" promptText="0" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Percent Discount (%):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="discountField" promptText="0" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Payment Method:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <ComboBox fx:id="paymentMethodCombo" prefWidth="200" GridPane.rowIndex="5" GridPane.columnIndex="1" />

            <Label text="Payment Type:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <ComboBox fx:id="paymentTypeCombo" prefWidth="200" GridPane.rowIndex="6" GridPane.columnIndex="1" />

            <Label text="Amount:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
            <TextField fx:id="amountField" promptText="0.00" GridPane.rowIndex="7" GridPane.columnIndex="1" />
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirm" />
            <Button text="Cancel" onAction="#handleCancel" />
        </HBox>
    </children>
</VBox>
