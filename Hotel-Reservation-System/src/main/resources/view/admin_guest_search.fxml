<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="12"
      fx:controller="controller.AdminGuestSearchController">
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Guests" styleClass="header-label"/>

    <GridPane hgap="8" vgap="8">
        <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="First or last" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Phone" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="phoneField" promptText="Phone" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
        <Label text="Email" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
        <TextField fx:id="emailField" promptText="Email" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
    </GridPane>

    <HBox spacing="8">
        <Button fx:id="searchButton" text="Search" onAction="#onSearchClicked" styleClass="primary-button"/>
        <Button fx:id="viewDetailsButton" text="View Details" onAction="#onViewDetailsClicked"/>
        <Button fx:id="enrollLoyaltyButton" text="Enroll in Loyalty" onAction="#onEnrollLoyaltyClicked"/>
    </HBox>

    <TableView fx:id="guestTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="150"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="220"/>
            <TableColumn fx:id="loyaltyColumn" text="Loyalty No." prefWidth="150"/>
        </columns>
    </TableView>

    <Label fx:id="resultsLabel" text="0 matching guests"/>
</VBox>
