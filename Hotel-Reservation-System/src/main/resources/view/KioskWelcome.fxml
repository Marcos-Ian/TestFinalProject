<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.KioskController"

            prefHeight="700.0" prefWidth="900.0" styleClass="kiosk-container">

    <!-- Rules and Regulations Button (Always Visible) -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <Button fx:id="rulesButton" text="Rules &amp; Regulations"
                    styleClass="rules-button" prefWidth="150" prefHeight="50"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="welcome-content">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <!-- Welcome Header -->
            <Label text="Welcome to Grand Plaza Hotel" styleClass="welcome-title">
                <font>
                    <Font name="System Bold" size="36"/>
                </font>
            </Label>

            <!-- Subtitle -->
            <Label text="Your comfort is our priority" styleClass="welcome-subtitle">
                <font>
                    <Font size="18"/>
                </font>
            </Label>

            <!-- Instructional Video/GIF Placeholder -->
            <VBox alignment="CENTER" spacing="10" styleClass="video-container">
                <ImageView fx:id="instructionalImage" fitHeight="300" fitWidth="500"
                           preserveRatio="true" styleClass="instruction-video"/>
                <Label text="Please follow the on-screen instructions" styleClass="instruction-text">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
            </VBox>

            <!-- Welcome Message -->
            <Label text="Book your room quickly and safely with our contactless kiosk system"
                   wrapText="true" styleClass="welcome-message" textAlignment="CENTER"
                   maxWidth="600">
                <font>
                    <Font size="16"/>
                </font>
            </Label>

            <!-- Start Button -->
            <Button fx:id="startBookingButton" text="Start Booking"
                    styleClass="primary-button" prefWidth="200" prefHeight="60">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Button>

            <!-- Footer Info -->
            <HBox alignment="CENTER" spacing="20" styleClass="footer-info">
                <Label text="ðŸ¨ Contactless Service" styleClass="info-label"/>
                <Label text="âš¡ Quick Booking" styleClass="info-label"/>
                <Label text="ðŸ”’ Secure Process" styleClass="info-label"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>