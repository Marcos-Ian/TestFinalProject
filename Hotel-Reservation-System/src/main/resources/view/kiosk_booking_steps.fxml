<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.KioskBookingController">
    <left>
        <VBox spacing="10" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="10" bottom="20" left="20"/>
            </padding>
            <Label text="Booking Steps" styleClass="header-label"/>
            <Label text="1) Guests"/>
            <Label text="2) Dates &amp; plan" style="-fx-font-weight: bold;"/>
            <Label text="3) Details &amp; add-ons"/>
            <Label text="4) Review"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="16">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Step 2 â€“ Dates &amp; room plan" styleClass="header-label"/>
            <GridPane hgap="12" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="40"/>
                    <ColumnConstraints percentWidth="60"/>
                </columnConstraints>

                <Label text="Check-in date*" GridPane.rowIndex="0"/>
                <DatePicker fx:id="checkInPicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label fx:id="checkInErrorLabel" textFill="red" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Check-out date*" GridPane.rowIndex="2"/>
                <DatePicker fx:id="checkOutPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label fx:id="checkOutErrorLabel" textFill="red" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Room suggestion" GridPane.rowIndex="4" GridPane.valignment="TOP"/>
                <VBox spacing="6" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <Label fx:id="suggestionLabel" wrapText="true"/>
                    <HBox spacing="10">
                        <RadioButton fx:id="suggestedRadio" text="Use suggested plan"/>
                        <RadioButton fx:id="customRadio" text="Choose my own rooms"/>
                    </HBox>
                </VBox>

                <Label text="Room type" GridPane.rowIndex="5"/>
                <ComboBox fx:id="roomTypeCombo" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="220"/>

                <Label text="Quantity" GridPane.rowIndex="6"/>
                <Spinner fx:id="roomCountSpinner" GridPane.rowIndex="6" GridPane.columnIndex="1" editable="true"/>

                <Label fx:id="customNoticeLabel" wrapText="true" GridPane.rowIndex="7" GridPane.columnIndex="1"
                       text="If you choose your own room type and quantity, please review the booking policy carefully."/>
            </GridPane>
            <Label fx:id="estimateLabel" text="Room cost estimate: --"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Back" onAction="#backToGuests"/>
                <Button fx:id="nextButton" text="Next: Guest details" onAction="#goToGuestDetails" styleClass="primary-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
