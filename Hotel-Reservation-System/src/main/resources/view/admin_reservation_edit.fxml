<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="10"
      fx:controller="controller.AdminReservationEditController">
    <Label text="Reservation Editor" styleClass="header-label"/>
    <GridPane hgap="8" vgap="8">
        <Label text="Reservation ID" GridPane.rowIndex="0"/>
        <TextField fx:id="reservationIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="First Name" GridPane.rowIndex="1"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Last Name" GridPane.rowIndex="2"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Check-In" GridPane.rowIndex="3"/>
        <DatePicker fx:id="checkInPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Check-Out" GridPane.rowIndex="4"/>
        <DatePicker fx:id="checkOutPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Label text="Status" GridPane.rowIndex="5"/>
        <ComboBox fx:id="statusCombo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        <Label text="Rooms" GridPane.rowIndex="6"/>
        <ListView fx:id="roomListView" GridPane.rowIndex="6" GridPane.columnIndex="1" prefHeight="120.0"/>
    </GridPane>
    <HBox spacing="8">
        <Button fx:id="saveButton" text="Save" onAction="#onSave" styleClass="primary-button"/>
        <Button fx:id="cancelButton" text="Cancel Reservation" onAction="#onCancelReservation" styleClass="danger-button"/>
    </HBox>
    <Label text="Billing Summary" styleClass="section-header"/>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="60"/>
        </columnConstraints>

        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>

        <Label text="Base Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="baseSubtotalLabel" text="$0.00"
               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Discount (%):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="discountPercentField" promptText="e.g. 10"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Button fx:id="applyDiscountButton"
                text="Apply Discount"
                onAction="#onApplyDiscountClicked"
                GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Total After Discount &amp; Loyalty:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="totalAfterDiscountLabel" text="$0.00"
               GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    <Label fx:id="messageLabel"/>
</VBox>
